<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="30dp"
        android:background="@color/colorYellow"
        >

    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Линейное уравнение"
            android:id="@+id/btnActTwo"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"/>

    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Квадратное уравнение"
            android:id="@+id/btnActThree"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"/>


    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НОК"
            android:id="@+id/btnActSeven"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"/>

    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НОД"
            android:id="@+id/btnActFour"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"/>

    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Система линейных уравнений"
            android:id="@+id/btnActSix"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"/>

    <Space android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="5"/>

</LinearLayout>